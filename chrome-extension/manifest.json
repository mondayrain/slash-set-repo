{
    "name": "slash-set-repo",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Companion to Slack slash-set-repo tool",
    "permissions": [
        "activeTab",
        "<PATH-TO-SLACK-SERVER-ENDPOINT>"
    ],
    "content_scripts": [{
        "matches": ["https://github.com/wealthsimple/*"],
        "js": ["scripts/contentscript.js"],
        "run_at": "document_end"
    }],
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": true
    }
}
